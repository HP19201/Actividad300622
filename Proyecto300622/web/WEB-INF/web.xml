<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>InicioSesion</servlet-name>
        <servlet-class>Servlet.InicioSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Guardar</servlet-name>
        <servlet-class>Servlet.Guardar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesion</servlet-name>
        <servlet-class>Servlet.CerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConexionBD</servlet-name>
        <servlet-class>SQL.ConexionBD</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MetodosSQL</servlet-name>
        <servlet-class>SQL.MetodosSQL</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewClass</servlet-name>
        <servlet-class>SQL.NewClass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Pedidos</servlet-name>
        <servlet-class>Servlet.Pedidos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InicioSesion</servlet-name>
        <url-pattern>/InicioSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Guardar</servlet-name>
        <url-pattern>/Guardar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesion</servlet-name>
        <url-pattern>/CerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConexionBD</servlet-name>
        <url-pattern>/ConexionBD</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MetodosSQL</servlet-name>
        <url-pattern>/MetodosSQL</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewClass</servlet-name>
        <url-pattern>/NewClass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Pedidos</servlet-name>
        <url-pattern>/Pedidos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
